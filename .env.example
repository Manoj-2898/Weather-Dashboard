# OpenWeatherMap API Key (REQUIRED)
# Get free key at: https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here

# GeoNames API Username (OPTIONAL)
# Enables detailed village/district level geocoding worldwide
# Register free at: https://www.geonames.org/login
VITE_GEONAMES_USER=your_geonames_username

# OpenCage Geocoding API Key (OPTIONAL)
# Provides accurate place hierarchy and structured admin data
# Get free tier at: https://opencagedata.com/
VITE_OPENCAGE_KEY=your_opencage_api_key

# Mapbox API Token (OPTIONAL - for enhanced map features)
VITE_MAPBOX_TOKEN=your_mapbox_token

# Google Geocoding API Key (OPTIONAL - paid premium accuracy)
VITE_GOOGLE_GEOCODING_KEY=your_google_key
